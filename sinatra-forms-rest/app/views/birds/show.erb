<h1><%= @bird.name %></h1>

<p><%= @bird.flavor %> makes me say "<%= @bird.call %>"</p>

<p><a href="/birds/<%= @bird.id %>/edit">Edit</a></p>

<form action="/birds/<%= @bird.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

<h3><%= @bird.name %>'s Songs:</h3>

<% @bird.songs.each do |song| %>
  <p><a href="/songs/<%= song.id %>" ><%= song.title %></a></p>
<% end %>

<p><a href="/birds">Back</a></p>