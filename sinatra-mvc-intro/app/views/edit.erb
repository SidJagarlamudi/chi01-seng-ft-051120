<h1>Edit Book<h1>

<form method="post" action="/books/<%= @book.id %>">
  <input type="hidden" name="_method" value="put">
  <ul>
    <li>
      <label for="title">Title:</label>
      <input type="text" id="title" name="book[title]" placeholder="eg Moby Dick" value="<%= @book.title %>">
    </li>
    <li>
      <label for="author">Author:</label>
      <input type="text" id="author" name="book[author]" value="<%= @book.author %>">
    </li>
    <li>
      <label for="snippet">Snippet:</label>
      <br>
      <textarea id="snippet" rows=7 cols=28 name="book[snippet]" placeholder="describe the book or share an excerpt for the readers out there..."><%= @book.snippet %></textarea>
    </li>
    <input type="submit" value="Update Book! WHOOOSH">
  </ul>
</form>